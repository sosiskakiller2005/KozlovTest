<Page x:Class="KozlovTest.Views.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KozlovTest.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800"
      Title="StartPage">

    <StackPanel>
        <Border Height="10"/>
        <TextBlock Text="Тесты по дисциплине" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Экономика отрасли" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Border Height="10"/>
        <Button Name="TeacherBtn" Content="Преподаватель" Click="TeacherBtn_Click" Width="250"/>
        <Border Height="10"/>
        <Button Name="Student" Content="Студент" Click="Student_Click" Width="250"/>

    </StackPanel>
</Page>
