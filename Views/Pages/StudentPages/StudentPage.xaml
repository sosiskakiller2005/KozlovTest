<Page x:Class="KozlovTest.Views.Pages.StudentPages.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KozlovTest.Views.Pages.StudentPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentPage">

    <StackPanel>
        <TextBlock Text="Выберите группу"/>
        <Border Height="20"/>
        <ComboBox Name="GroupCmb" SelectionChanged="GroupCmb_SelectionChanged"/>
        <Border Height="20"/>
        <TextBlock Text="Выберите студента"/>
        <Border Height="20"/>
        <ComboBox Name="StudentCmb"/>
        <Border Height="20"/>
        <TextBlock Text="Выберите тест"/>
        <Border Height="20"/>
        <ComboBox Name="TestCmb"/>
        <Border Height="20"/>
        <Button Name="StartBtn" Content="Начать" Click="StartBtn_Click"/>
    </StackPanel>
</Page>
