<Page x:Class="KozlovTest.Views.Pages.PasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KozlovTest.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800"
      Title="PasswordPage">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Светлана Дмитриевна, введите пароль" HorizontalAlignment="Center"/>
        <Border Height="20"/>
        <PasswordBox Name="PasswordTb" Width="300"/>
        <Border Height="20"/>
        <Button Name="EnterBtn" Content="Войти" Click="EnterBtn_Click" Width="200"/>

    </StackPanel>
</Page>
